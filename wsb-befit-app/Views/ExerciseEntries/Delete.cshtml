@model BeFit.Models.ExerciseEntry

@{
    ViewData["Title"] = "Usuń";
}

<h1>Usuń</h1>

<h3>Czy jesteś pewien, że chcesz usunąć ten rekord?</h3>
<div>
    <h4>ExerciseEntry</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TrainingSession)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TrainingSession.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExerciseType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExerciseType.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Load)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Load)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sets)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sets)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RepetitionsPerSet)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RepetitionsPerSet)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Wróc do listy</a>
    </form>
</div>
