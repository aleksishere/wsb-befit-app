@using Microsoft.AspNetCore.Mvc.Rendering
@{
    var title = ViewData["Title"] as string ?? "wsb-befit-app";
    string? currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    string? currentAction = ViewContext.RouteData.Values["action"]?.ToString();

    Func<string, string?, string> isActive = (controller, action) =>
    {
        if (!string.IsNullOrEmpty(action))
        {
            return controller == currentController && action == currentAction ? "active" : "";
        }
        return controller == currentController ? "active" : "";
    };
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <title>@title - BeFit</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet"href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/wsb-befit-app.styles.css" asp-append-version="true" />

    <style>
        body { padding-top: 70px; }
        .navbar-brand { font-weight: 600; }
        .nav-link.active {
            font-weight: 600;
            border-bottom: 2px solid #fff;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">BeFit</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @isActive("Home", "Index")"
                               asp-controller="Home"
                               asp-action="Index">
                                Start
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @isActive("TrainingSessions", null)"
                               asp-controller="TrainingSessions"
                               asp-action="Index">
                                Sesje treningowe
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @isActive("ExerciseEntries", null)"
                               asp-controller="ExerciseEntries"
                               asp-action="Index">
                                Ćwiczenia (wpisy)
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @isActive("ExerciseTypes", null)"
                               asp-controller="ExerciseTypes"
                               asp-action="Index">
                                Rodzaje ćwiczeń
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @isActive("Stats", "Index")"
                               asp-controller="Stats"
                               asp-action="Index">
                                Statystyki
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <partial name="_LoginPartial" />
        </nav>
    </header>

    <main class="container">
        <div class="mt-3">
            @RenderBody()
        </div>
    </main>

    <footer class="border-top mt-4 py-3">
        <div class="container text-center text-muted">
            &copy; @DateTime.Now.Year - BeFit
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
