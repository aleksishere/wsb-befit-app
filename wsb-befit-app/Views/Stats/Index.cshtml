@model IEnumerable<BeFit.Models.ExerciseStatsViewModel>

<h2>Statystyki ćwiczeń z ostatnich 4 tygodni</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Rodzaj ćwiczenia</th>
        <th>Liczba sesji</th>
        <th>Łączna liczba powtórzeń</th>
        <th>Średnie obciążenie (kg)</th>
        <th>Maksymalne obciążenie (kg)</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var stat in Model)
    {
        <tr>
            <td>@stat.ExerciseTypeName</td>
            <td>@stat.SessionsCount</td>
            <td>@stat.TotalRepetitions</td>
            <td>@stat.AverageLoad.ToString("F2")</td>
            <td>@stat.MaxLoad</td>
        </tr>
    }
    </tbody>
</table>